<?xml version="1.0" encoding="UTF-8"?>

<configuration>
	<!-- console appender -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<!-- <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} 
				- %msg%n</pattern> -->
			<pattern>%d [%t] %-5p [%c{30}:%L] - %m%n</pattern>
		</encoder>
	</appender>
	<!-- file appender -->
	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>/logs/futuredata/architecture/dev/architecture.log</File>
		<encoder>
			<pattern>%d [%t] %-5p [%c:%L] - %m%n</pattern>
		</encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<FileNamePattern>/logs/futuredata/architecture/dev/architecture%i-log.zip
			</FileNamePattern>
			<MinIndex>1</MinIndex>
			<MaxIndex>12</MaxIndex>
		</rollingPolicy>
		<triggeringPolicy
			class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<MaxFileSize>100MB</MaxFileSize>
		</triggeringPolicy>
	</appender>
	<logger name="com.futuredata" level="ALL" />
	<!-- common freamwork level -->
	<logger name="org.springframework" level="ALL" />
	<logger name="org.apache" level="ALL" />
	<logger name="org.apache.http" level="ALL" />
	<!-- db log level -->
	<logger name="org.mybatis" level="ALL" />
	<logger name="java.sql.Connection" level="WARN" />
	<logger name="java.sql.Statement" level="WARN" />
	<logger name="java.sql.ResultSet" level="WARN" />
	<logger name="java.sql.PreparedStatement" level="WARN" />

	<!-- 开发环境默认都INFO级别 -->
	<root level="INFO">
		<appender-ref ref="FILE" />
		<appender-ref ref="STDOUT" />
	</root>
</configuration>